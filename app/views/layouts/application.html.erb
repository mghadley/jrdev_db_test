<!DOCTYPE html>
<html>
<head>
  <title>JrdevDbTestApp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
<% if current_user %>
	<% if current_user.type == 'Educator' %>
		<%= link_to 'Create Classroom', new_classroom_path %>
	<% elsif current_user.type == 'Mentor' %>
	<% end %>
	<%= link_to 'See All Users', friendships_path %> 
<% end %>
<%= yield %>

</body>
</html>
